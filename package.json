{
	"name": "beger-backend",
	"version": "1.0.0",
	"description": "Beger Backend API",
	"module": "src/index.ts",
	"type": "module",
	"private": true,
	"license": "MIT",
	"dependencies": {
		"@hono/valibot-validator": "^0.5.3",
		"drizzle-orm": "^0.44.5",
		"hono": "^4.9.8",
		"memcached": "^2.2.2",
		"pino": "^9.11.0",
		"pino-pretty": "^13.1.1",
		"postgres": "^3.4.7",
		"drizzle-kit": "^0.31.4",
		"valibot": "^1.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@types/bun": "^1.2.22",
		"@types/memcached": "^2.2.10",
		"cpy-cli": "^6.0.0",
		"oxlint": "^1.16.0",
		"typescript": "^5.9.2"
	},
	"scripts": {
		"build:dev": "NODE_ENV=development bun scripts/build.script.ts",
		"build:prod": "NODE_ENV=production bun scripts/build.script.ts",
		"start:dev": "NODE_ENV=development bun --watch src/index.ts",
		"start:prod": "NODE_ENV=production bun dist/index.mjs",
		"test": "bun test",
		"lint": "oxlint . --fix",
		"format": "biome format --write .",
		"prebuild:dev": "rm -rf dist && cpy certs dist",
		"prebuild:prod": "rm -rf dist && cpy certs dist",
		"docker:build": "DOCKER_BUILDKIT=1 docker build -t beger-backend:latest .",
		"docker:run": "docker run -d --name beger-backend -p 5333:5333 --env-file .env beger-backend:latest",
		"docker:stop": "docker stop beger-backend && docker rm beger-backend",
		"db:generate": "drizzle-kit generate",
		"db:push": "drizzle-kit push",
		"db:migrate": "drizzle-kit migrate",
		"db:seed:dev": "NODE_ENV=development bun scripts/seed.script.ts",
		"db:seed:prod": "NODE_ENV=production bun dist/seed.script.mjs",
		"db:reset": "drizzle-kit drop && bun db:push && bun db:seed:dev"
	}
}
