{
  "name": "beger-backend",
  "version": "1.0.0",
  "description": "Beger Backend API",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "license": "MIT",
  "dependencies": {
    "@hono/valibot-validator": "^0.5.3",
    "drizzle-orm": "^0.44.6",
    "hono": "^4.9.9",
    "memcached": "^2.2.2",
    "pino": "^9.12.0",
    "postgres": "^3.4.7",
    "drizzle-kit": "^0.31.5",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@hono/swagger-ui": "^0.5.2",
    "@types/bun": "^1.2.23",
    "@types/memcached": "^2.2.10",
    "cpy-cli": "^6.0.0",
    "cross-env": "^10.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "oxlint": "^1.19.0",
    "pino-pretty": "^13.1.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean && cpy certs dist",
    "build:dev": "npm run prebuild && cross-env NODE_ENV=development bun scripts/build.script.ts",
    "build:prod": "npm run prebuild && cross-env NODE_ENV=production bun scripts/build.script.ts",
    "start:dev": "cross-env NODE_ENV=development bun --watch src/index.ts",
    "start:dist:dev": "cross-env NODE_ENV=development bun dist/index.mjs",
    "start:dist:prod": "cross-env NODE_ENV=production bun dist/index.mjs",
    "test": "bun test",
    "lint": "oxlint . --fix",
    "format": "biome format --write .",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:seed:dev": "cross-env NODE_ENV=development bun scripts/seed.script.ts",
    "db:seed:prod": "cross-env NODE_ENV=production bun dist/seed.script.mjs",
    "prepare": "husky"
  },
  "lint-staged": {
    "*": ["biome format --write", "oxlint --fix"]
  }
}
