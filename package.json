{
  "name": "beger-backend",
  "version": "1.0.0",
  "description": "Beger Backend API",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.5",
    "jose": "^6.1.0",
    "pg": "^8.16.3",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@rollup/plugin-alias": "^5.1.1",
    "@types/bun": "^1.2.21",
    "@types/pg": "^8.15.5",
    "cpy-cli": "^6.0.0",
    "drizzle-kit": "^0.31.4",
    "oxlint": "^1.13.0",
    "rolldown": "1.0.0-beta.34",
    "rollup": "^4.49.0",
    "rollup-plugin-swc3": "^0.12.1",
    "sonda": "^0.9.0"
  },
  "scripts": {
    "build": "NODE_ENV=production rolldown -c rolldown.config.ts",
    "build:dev": "NODE_ENV=development rolldown -c rolldown.config.ts",
    "dev": "NODE_ENV=development bun --watch src/index.ts",
    "start": "NODE_ENV=production bun dist/index.mjs",
    "test": "NODE_ENV=test bun test",
    "lint": "oxlint --fix .",
    "format": "biome format --write .",
    "prebuild": "rm -rf dist && cpy certs dist",
    "docker:build": "DOCKER_BUILDKIT=1 docker build -t beger-backend:latest .",
    "docker:run": "docker run -d --name beger-backend -p 5333:5333 --env-file .env beger-backend:latest",
    "docker:stop": "docker stop beger-backend && docker rm beger-backend",
    "compose:build": "docker-compose build",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down",
    "compose:logs": "docker-compose logs -f",
    "compose:restart": "docker-compose restart",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:seed:dev": "NODE_ENV=development bun src/db/seed.ts",
    "db:seed:prod": "NODE_ENV=production bun dist/seed.mjs",
    "db:reset": "drizzle-kit drop && bun db:push && bun db:seed:dev"
  },
  "license": "MIT"
}