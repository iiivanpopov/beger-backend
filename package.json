{
  "name": "beger-backend",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "description": "Beger Backend API",
  "license": "MIT",
  "module": "src/index.ts",
  "scripts": {
    "prebuild": "rimraf dist && cpy creds dist",
    "build": "bun ./scripts/build.script.ts",
    "build:dev": "cross-env NODE_ENV=development bun run build",
    "build:prod": "cross-env NODE_ENV=production bun run build",
    "start:dev": "cross-env NODE_ENV=development bun --watch ./src/index.ts",
    "start:dist:dev": "cross-env NODE_ENV=development bun ./dist/index.js",
    "start:dist:prod": "cross-env NODE_ENV=production bun ./dist/index.js",
    "seed:dev": "cross-env NODE_ENV=development bun ./scripts/seed.script.ts",
    "seed:prod": "cross-env NODE_ENV=production bun ./dist/seed.script.js",
    "prepare": "husky"
  },
  "dependencies": {
    "@hono/valibot-validator": "^0.5.3",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "^0.44.6",
    "hono": "^4.9.10",
    "pino": "^10.0.0",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@types/bun": "^1.3.0",
    "cpy-cli": "^6.0.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.37.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "pino-pretty": "^13.1.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
